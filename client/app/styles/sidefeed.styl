
& .dnr-side-feed
  height 100%
  height 100%
  width 350px
  position absolute
  top 0px
  left 0px
  & .dnr-crown
    height 80px
    width 100%
    background #fff
    box-shadow 20px 0px 19px -21px rgba(0,0,0,0.2)
    z-index 20
    & .dnr-logo
      height 80px
      width 100%
      z-index 20
  & .dnr-switch-bar
    position absolute
    top 130px
    right 0px
    width 51px
    height calc( 100% - 130px )
    background $white
    z-index 20
    // box-shadow 20px 0px 19px -21px rgba(0,0,0,0.2)
    & ul.dnr-social-nav-links
      height 100%
      & li
        position relative
        height 70px
        text-align center
        cursor pointer
        width 100%
        border-bottom 1px solid $chromeWhite
        &:first-child
          //border-top 1px solid #3c3c3c
        &:before
          content ''
          position absolute
          display block
          left 0px
          top 0px
          width 10%
          height 100%
          line-height 70px
          color color-medium
          overflow hidden
        &:hover
          & h4
            & .svg-icon *
              fill color-medium
          &:before
            width 200px
            content attr(tooltip)
        &.active
          color color-medium
          & h4
            & .svg-icon *
              fill color-medium
          &:before
            content '' !important
            width 100% !important
        & h4
          line-height 70px
        &.itemDrag
          cursor col-resize
          height 24px
          & .svg-icon *
            fill $cRorange
            &:hover
              stroke #fff
              background $cRorange
          & h4
            line-height 24px
          &:before, &:after
            display none
        &.item1
          color $cRorange
          & .svg-icon *
            fill $cRorange
          &:before, &:after
            background $cRorange
        &.item2
          color $cYellow
          & .svg-icon *
            fill $cYellow
          &:before, &:after
            background $cYellow
        &.item3
          color $cLime
          & .svg-icon *
            fill $cLime
          &:before, &:after
            background $cLime
        &.item4
          color $cTeal
          & .svg-icon *
            fill $cTeal
          &:before, &:after
            background $cTeal
        &.itemGray
          color gray
          & .svg-icon *
            fill gray
          &:before, &:after
            background gray
        // &:last-child
        //   border-bottom 1px solid color-medium
  & .dnr-flow-content
    position absolute
    left 0px
    top 80px
    width calc( 100% - 50px )
    height calc( 100% - 80px )
    text-align center
    //border-right 1px solid #2c2c2c
    box-shadow inset -1px 0px 1px -1px #777
    & .dnr-flow-content-inside
      overflow hidden
      width 100%
      // height 100%
      height calc( 100% - 50px )
      margin-top 50px
      & .scroll-indicator
        border-style solid
        border-color inherit
        background $white
        border-top-width 3px
        border-bottom-width 3px
      & .dnr-flow-content-scroll
        width 100%
        // margin-right 20px
        // width calc(100% - 20px)
        // background $bg
        height 100%
        position relative
        overflow hidden
      & .dnr-flow-vlelem
        height 50px
        margin 0px 2%
        width 96%
        position relative
        border-style solid
        border-color rgba(0,0,0,0)
        background #fff
        margin-bottom 1px
        & h6
          color black
        &:hover
          cursor pointer
          background rgba(#fff,.3)
    & .dnr-flow-content-header
      position absolute
      top 0px
      width calc( 100% + 50px )
      height 50px
      left 0px
      background-color #f5f5f5
      box-shadow 20px 0px 19px -21px rgba(0,0,0,0.2)
      z-index 20
      & h4
        text-align left
        padding-left 20%
        color inherit
        line-height 50px

.dnr-global-input
  position absolute
  background inherit
  left 0px
  bottom 0px
  width 100%
  height 50px
  border-color inherit
  z-index 21
  & form
    padding 0px
    margin 0px
    height 100%
    width 100%
    & input
      width 70%
      margin 0px
      float left
    & input[type="text"]
      border 0px
      outline none
      background #282828
      color #f5f5f5
      height 100%
      padding 0 0 0 5px
      line-height 48px
    & button
      width 30%
      border-radius 0px
      background color-accent
      height 100%
      margin 0px
      float left
      padding 0px
      & h5
        line-height 48px
        text-align center

.avatar
  position absolute
  overflow hidden
  left 5px
  top 4px
  width 40px
  height 40px
  border-radius 0 15px 15px 15px
  border-top 2px solid
  border-left 2px solid
  border-color inherit
  background url(http://static.fragbite.se/profilepictures/200/110959.jpg)
  background-position 50%
  background-size 100%


.loader{
  margin: 0 0 2em;
  height: 100px;
  width: 50%;
  text-align: center;
  padding: 1em;
  margin: 0 auto 1em;
  display: inline-block;
  vertical-align: top;
}

