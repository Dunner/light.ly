
& .dnr-side-feed
  height 100%
  width 400px
  position absolute
  position bottom
  top 0px
  left 0px
  & .chatwindow
    position relative
    width 100%
    height auto
    text-align left
    & .chatwindow-messages
      & input[type="text"]
        width 80%
        height 30px
        background #fff
        border 1px solid #ccc
        padding 0
        margin 0
        font-family 'Open Sans',sans-serif
        font-size 95%
        color #555
    & .chatwindow-message
      width 80%
      border-radius 5px
      padding 5px
      margin 5px
    & .chatwindow-message-me
      margin-left 15%
      background #e87352
    & .chatwindow-message-other
      background #4ad486
    & chatwindow-form
      position absolute
      bottom 0px
      left 0px
      width 100%
  & .dnr-switch-bar
    position absolute
    top 0px
    padding-top 70px
    left 0px
    width 51px
    bottom 0px
    z-index 20
    background #2d3338
    // box-shadow 20px 0px 19px -21px rgba(0,0,0,0.2)
    & ul.dnr-social-nav-links
      height 100%
      & li
        position relative
        height 70px
        text-align center
        cursor pointer
        width 100%
        &:first-child
          //border-top 1px solid #3c3c3c
        &:before
          content ''
          position absolute
          display block
          left 0px
          top 0px
          width 10%
          height 100%
          line-height 70px
          color color-medium
          overflow hidden
          pointer-events none
        &:hover
          & h4
            & .svg-icon *
              fill color-medium
          &:before
            width 200px
            content attr(tooltip)
        &.pulsate //:not(.active)
          &:before
            animation pulsate 2s ease infinite
        &.active
          color color-medium
          & h4
            & .svg-icon *
              fill color-medium
          &:before
            content '' !important
            width 100% !important
        & h4
          line-height 70px
        & .dnr-feed-bubble
          position absolute
          left 5px
          right 5px
          bottom 3px
          height 25px
          line-height 25px
          z-index 25
          font-size 12px
        &.itemDrag
          cursor col-resize
          height 24px
          & .svg-icon *
            fill $cRorange
            &:hover
              stroke #fff
              background $cRorange
          & h4
            line-height 24px
          &:before, &:after
            display none
        &.item1
          color $cRorange
          & .svg-icon *
            fill $cRorange
          &:before, &:after
            background $cRorange
        &.item2
          color $cYellow
          & .svg-icon *
            fill $cYellow
          &:before, &:after
            background $cYellow
        &.item3
          color $cLime
          & .svg-icon *
            fill $cLime
          &:before, &:after
            background $cLime
        &.item4
          color $cTeal
          & .svg-icon *
            fill $cTeal
          &:before, &:after
            background $cTeal
        &.itemGray
          color gray
          & .svg-icon *
            fill gray
          &:before, &:after
            background gray
        // &:last-child
        //   border-bottom 1px solid color-medium
  & .dnr-flow-content
    position absolute
    right 0px
    top 70px
    bottom 65px
    width calc( 100% - 50px )
    text-align center
    //border-right 1px solid #2c2c2c
    // box-shadow inset -1px 0px 1px -1px #777
    overflow hidden
    & .dnr-flow-content-header
      position absolute
      top 0px
      width 100%
      height 70px
      right 0px
      z-index 13
      & h4
        text-align left
        color #fff
        line-height 70px
        width calc( 100% - 40px )
        margin 0 auto
        // border-bottom 1px solid rgba(255,255,255,.3)
        & .svg-icon *
            fill black
    & .dnr-flow-content-inside
      position absolute
      top 0px
      width 100%
      bottom 0px
      right 0px
      height 100%
      & .scroll-indicator
        position absolute
        background rgba(255,255,255,.3)
        border-width 0px
        width 0px
        top 0%
        right 0%
        height 25%
      & .dnr-flow-content-scroll
        position absolute
        right -20px
        top 70px
        bottom 50px
        left 0px
        overflow-y scroll
        overflow-x hidden
      & .dnr-flow-vlelem
        height 50px
        width 100%
        position relative
        border-style solid
        border-color rgba(0,0,0,0)
        margin-bottom 1px
        & h6
          color white
        &:hover
          cursor pointer
          background rgba(#fff,.3)

.dnr-global-input
  position absolute
  background inherit
  left 0px
  bottom 0px
  width 100%
  height 50px
  border-color inherit
  z-index 21
  & form
    padding 0px
    margin 0px
    height 100%
    width 100%
    & input
      width 70%
      margin 0px
      float left
    & input[type="text"]
      border 0px
      outline none
      background #282828
      color #f5f5f5
      height 100%
      padding 0 0 0 5px
      line-height 48px
    & button
      width 30%
      border-radius 0px
      background color-deccent-light
      height 100%
      margin 0px
      float left
      padding 0px
      & h5
        line-height 48px
        text-align center

.avatar
  position absolute
  overflow hidden
  left 5px
  top 4px
  width 40px
  height 40px
  border-radius 0 15px 15px 15px
  border-top 2px solid
  border-left 2px solid
  border-color inherit
  background url(http://static.fragbite.se/profilepictures/200/110959.jpg)
  background-position 50%
  background-size 100%


.loader{
  margin: 0 0 2em;
  height: 100px;
  width: 50%;
  text-align: center;
  padding: 1em;
  margin: 0 auto 1em;
  display: inline-block;
  vertical-align: top;
}

