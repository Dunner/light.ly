

.dnr-cornice
	height 8px
	width 100%
	background $accent


.dnr-splitter
	posititon relative
	height calc( 100% - 8px )
	width 100%

	& .dnr-social
		overflow hidden
		position absolute
		top 0px
		left 350px
		width calc( 100% - 350px )
		background #fff // $white
		height 100%
		z-index 13
		color black

		& .dnr-social-mask
			position absolute
			left 0
			right 0
			top 0
			bottom 0
				
		& .dnr-social-scroll
			pointer-events none
			overflow-y scroll
			position absolute
			left 0
			right 0
			top 0
			bottom 0

			& .social-view
				pointer-events auto
				position absolute
				top 85px
				right 20%
				width calc( 80% - 25px )
				padding 15px
				background #fff // $white
				//padding-top 85px
				min-height 100%

			& .social-banners
				position absolute
				top 0px
				right 0px
				width 20%
				padding 10px


.post-new
		position relative
		& .post-toggle
				cursor pointer
				height 120px
				padding 40px
				& img
						float left
						margin-right 20px
				& .text-new
						float left
						text-transform uppercase
						-webkit-font-smoothing antialiased
						font-weight bold!important
						font-weight 700
						line-height 40px
						font-size 14px
				&::after
						display block
						content ''
						clear both
		& .post-form
				opacity 1

.post
		cursor pointer
		position relative
		min-height 120px
		padding 10px 0
		& h1
				padding-bottom 10px
				padding-right 60px
		&:hover
				background #f5f5f5
		& .delete
				cursor pointer
				position absolute
				top 0px
				right 0px
				& h6
						line-height 20px
						margin-bottom 0px