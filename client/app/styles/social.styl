

.dnr-cornice
  height 8px
  width 100%
  background $accent


.dnr-splitter
  posititon relative
  height calc( 100% - 8px )
  width 100%

  & .dnr-social
    overflow hidden
    position absolute
    top 0px
    left 350px
    width calc( 100% - 350px )
    height 100%
    z-index 13

    & .dnr-social-scroll
      width 100%
      height 100%
      overflow-y scroll

      & .social-view
        position absolute
        top 0px
        right 20%
        background $white
        width 80%
        padding 5px
        padding-top 85px
        min-height 100%

      & .social-banners
        position absolute
        top 0px
        right 0px
        width 20%
        padding 10px
