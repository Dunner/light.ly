
.dnr-box
  width 100%
  height 100%
  overflow hidden
  position relative
  background-color $chromeMellow

  & > *
    height 100%
    position relative

  & .dnr-menu
    position absolute
    overflow hidden
    z-index 99
    left 0
    top 0
    height 100%

    & .dnr-menu-feednav
      position relative
      height 30px
      width 100%
      background-color color-medium

    & .dnr-menu-feed
      position relative
      height calc(50% - 30px)
      width 100%
      // overflow hidden
      background rgba(255,255,255,0.8)

    & .dnr-menu-nav
      position relative
      height 50%
      background-color color-medium

      & ul.dnr-menu-nav-links li
        position relative
        height 80px
        text-align center
        cursor pointer
        border-top 1px solid color-medium
        &:before
          content ''
          position absolute
          display block
          top 0px
          left 0px
          width 6px
          height 100%
        &:hover
          &:before
            width 10px
        &.active
          color color-medium !important
          &:before
            width 100% !important
        & h5
          line-height 80px
        &.item1
          color $cRorange
          &:before
            background $cRorange
        &.item2
          color $cYellow
          &:before
            background $cYellow
        &.item3
          color $cTeal
          &:before
            background $cTeal
        // &:last-child
        //   border-bottom 1px solid color-medium

  & .dnr-slate
    height 100%
    width 100%

  & .dnr-slate-scroll
    overflow-y scroll
    overflow-x hidden
    height 100%
    width 100%

.dnr-slate-push
  padding 30px
  float right

  &:after
    content ''
    display block
    clear both
.dnr-slate-slide
  width 100%
  position relative
  &:after
    content ''
    display block
    clear both

.full-slide
  &:before
    content ''
    display block
    width 0px
    height 0px
    position absolute
    top -26px
    border-left: 25px solid transparent;
    border-right: 26px solid transparent;
    border-bottom: 26px solid white;
    border-bottom-color: inherit;
    left calc(50% - 13px)


.slide-white
  background #f5f5f5
.slide-standard
  content ''
.slide-mustard
  background $cYellow
  border-bottom-color $cYellow
  border-right-color $cYellow
.slide-blood
  background $cRorange
  border-bottom-color $cRorange
  border-right-color $cRorange
.slide-lime
  background $cLime
  border-bottom-color $cLime
  border-right-color $cLime
.slide-ice
  background $cLblue
  border-bottom-color $cLblue
  border-right-color $cLblue
.slide-night
  background color-medium
  border-bottom-color color-medium
  border-right-color color-medium


ul.stitches
  & li
    border 1px solid black
    float left
  &:after
    content ''
    display block
    clear both




ul.dnr-feed
  position relative
  height 100%
  width 100%
  & li
    height 10%
    width 100%
